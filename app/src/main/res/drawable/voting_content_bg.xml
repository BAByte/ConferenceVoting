<?xml version="1.0" encoding="utf-8"?>
<!-- 矩形圆角+左右两边为一个圆弧 -->
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle"
    android:useLevel="true">

    <size
        android:width="@dimen/size_100a"
        android:height="@dimen/size_10a" />

    <solid android:color="@color/voting_content_bg" />

    <!-- 圆角半径是高度的一般就是一个圆弧了 -->
    <corners android:radius="@dimen/size_10a" />

</shape>