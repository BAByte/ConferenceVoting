<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <FrameLayout
        android:layout_gravity="center"
        android:layout_width="@dimen/size_100a"
        android:layout_height="@dimen/size_60a"
        android:layout_margin="@dimen/size_2a"
        android:background="@drawable/card_bg"
        android:elevation="@dimen/size_1a"
        tools:context=".HomeFragment">

        <TextView
            android:id="@+id/up"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/size_3a"
            android:gravity="center"
            android:text="@string/text_up"
            android:textColor="@color/text_up_next"
            android:textSize="@dimen/text_size_2a" />

        <ImageView
            android:id="@+id/close_btn"
            android:layout_width="@dimen/size_3a"
            android:layout_height="@dimen/size_3a"
            android:layout_gravity="end"
            android:layout_margin="@dimen/size_2a"
            android:src="@drawable/ic_close" />

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/size_10a"
            android:textColor="@color/text_2222222"
            android:textSize="@dimen/text_size_3a" />

        <com.shawnlin.numberpicker.NumberPicker
            android:id="@+id/number_picker"
            android:layout_width="@dimen/numberPickerLayoutW"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            app:np_dividerColor="@color/numberPicker"
            app:np_dividerDistance="@dimen/NumberPickerDivDistance"
            app:np_dividerThickness="@dimen/dividerThickness"
            app:np_height="@dimen/NumberPickerH"
            app:np_max="100"
            app:np_orientation="horizontal"
            app:np_selectedTextColor="@color/numberPicker"
            app:np_selectedTextSize="@dimen/size_6a"
            app:np_textColor="@color/numberPicker"
            app:np_textSize="@dimen/size_5a"
            app:np_value="1"
            app:np_width="@dimen/NumberPickerW" />


        <ImageView
            android:id="@+id/next"
            android:layout_width="@dimen/size_10a"
            android:layout_height="@dimen/size_10a"
            android:layout_gravity="center_horizontal|bottom"
            android:layout_marginBottom="@dimen/size_3a"
            android:src="@drawable/ic_next" />
    </FrameLayout>
</layout>